<?xml version="1.0"?>
<config>
    <modules>
        <Comm100_Livechat>
            <version>2.0.1</version>
        </Comm100_Livechat>
    </modules>
    <frontend>
        <routers>
            <livechat>
                <use>standard</use>
                <args>
                    <module>Comm100_Livechat</module>
                    <frontName>livechat</frontName>
                </args>
            </livechat>
        </routers>
        <layout>
            <updates>
                <livechat>
                    <file>comm100.xml</file>
                </livechat>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<livechat>
				<use>admin</use>
				<args>
					<module>Comm100_Livechat</module>
					<frontName>comm100</frontName>
				</args>
			</livechat>
        </routers>
    </admin>
	
    <adminhtml>
		<menu>
			<livechat module="livechat">
				<title>Comm100</title>
				<sort_order>75</sort_order>
				<action>comm100/adminhtml_livechat</action>
			</livechat>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Comm100_Livechat>
							<title>Comm100</title>
							<sort_order>10</sort_order>
						</Comm100_Livechat>
						<system>
                            <children>
                                <config>
                                    <children>
                                        <livechat>
                                            <title>Comm100 LiveChat Section</title>
                                        </livechat>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<livechat>
					<file>comm100.xml</file>
				</livechat>
			</updates>
		</layout>
    </adminhtml>   
	
    <global>
        <blocks>
            <livechat>
                <class>Comm100_Livechat_Block</class>
            </livechat>
        </blocks>
        <helpers>
            <livechat>
                <class>Comm100_Livechat_Helper</class>
            </livechat>
        </helpers>
		<models>
			<livechat>
                <class>Comm100_Livechat_Model</class>
			</livechat>
		</models>
    </global>
    <default>
        <livechat>
			<advanced>
				<installflag>0</installflag>
			</advanced>
            <general>
				<email></email>
				<password></password>
				<siteid>0</siteid>
				<planid>0</planid>
				<plantype>0</plantype>
				<code></code>
            </general>
        </livechat>
    </default>
</config>